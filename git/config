	email = sergio@secture.com
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIN3Uo9wcjJLsXcEcJ85BxA8ZHEJe670weClg+rOwSSWo

[gpg]
	format = ssh

[gpg "ssh"]
